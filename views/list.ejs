<%- include("header") -%>

        <div class="box" id="heading">
            <h1> <%=date%> </h1>
        </div>

        <div class="box">
            <% for (var i = 0; i < habits.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p> <%=habits[i]%> </p>
            </div>
            <% } %>

            <form class="item" action="/" method="post">
                <input type="text" name="newHabit" placeholder="New Habit" autocomplete="off" required>
                <button type="submit" name="button">+</button>
            </form>
        </div>

<%- include("footer") -%>